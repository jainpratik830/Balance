<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="20dp"
    app:cardMaxElevation="0dp"
    app:cardElevation="0dp"
    android:backgroundTint="@color/white_transparent"
    >

    <LinearLayout
        android:id="@+id/linearlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="@color/fui_transparent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/fui_transparent"
            android:padding="8dp"
            >

            <TextView
                android:id="@+id/textView_row_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/abeezee"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:text="TextView"
                android:textColor="@color/black"
                android:textSize="22dp"
                android:background="@color/fui_transparent"/>

            <TextView
                android:id="@+id/textView_row_desp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_marginRight="14dp"
                android:padding="6dp"
                android:text="TextView"
                android:textColor="@color/black"
                android:textSize="23dp"

                android:background="@color/fui_transparent"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/fui_transparent"
            >

            <TextView
                android:id="@+id/textView_row_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="6dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:text="TextView"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:background="@color/fui_transparent"/>

            <ImageView
                android:id="@+id/imageView_row_history"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/history"
                android:background="@color/fui_transparent"/>

            <ImageView
                android:id="@+id/imageView_row_edit"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                app:srcCompat="@drawable/add2"
                android:background="@color/fui_transparent"/>

            <ImageView
                android:id="@+id/imageView_row_delete"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                app:srcCompat="@drawable/clear2"
                android:background="@color/fui_transparent"/>


        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>